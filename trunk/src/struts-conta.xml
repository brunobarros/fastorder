<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
	<package name="conta" extends="default" namespace="/conta">
		
		<action name="listar" method="list" class="contaAction">
			<interceptor-ref name="permissionStack" />
			<result name="success" type="dispatcher">listar.jsp</result>
		</action>
		
		<action name="novo" method="prepare" class="contaAction">      
			<interceptor-ref name="permissionStack" />        
		    <result name="success" type="dispatcher" >cadastrar.jsp</result>
		</action>
		
		<action name="cadastrar" method="insert" class="contaAction">      
			<interceptor-ref name="permissionStack" />        
		    <result name="success" type="chain" >novo</result>
		    <result name="error" type="chain" >novo</result>
		    <result name="input" type="chain" >novo</result>
		</action>		
		
		<action name="atualizar" method="update" class="contaAction">      
			<interceptor-ref name="permissionStack" />        
		    <result name="success" type="chain" >listar</result>
		    <result name="error" type="chain" >listar</result>
		    <result name="input" type="chain" >listar</result>
		</action>
		
		<action name="excluir" method="delete" class="contaAction">      
			<interceptor-ref name="permissionStack" />        
		    <result name="success" type="chain" >listar</result>
		    <result name="error" type="chain" >listar</result>
		    <result name="input" type="chain" >listar</result>
		</action>				
		
	</package>
	
</struts>