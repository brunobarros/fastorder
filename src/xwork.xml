<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.1.1//EN" "http://www.opensymphony.com/xwork/xwork-1.1.1.dtd">

<xwork>
    <include file="webwork-default.xml"/>    

    <package name="default" extends="webwork-default">    
    
    	<interceptors>
    	
    		<interceptor name="transaction" class="br.com.fastorder.interceptor.TransactionInterceptor"/>
    		
    		<interceptor-stack name="appStack">
    			<interceptor-ref name="defaultStack" />
    			<interceptor-ref name="transaction" />    			
    		</interceptor-stack>
    	
    	</interceptors>

        <action name="main">      
            <result type="dispatcher" >/WEB-INF/pages/main.jsp</result>
        </action>			
        
        <action name="tipoProduto.listar" method="list" class="br.com.fastorder.action.TipoProdutoAction">
        	<interceptor-ref name="appStack" />
            <result name="success" type="dispatcher" >/WEB-INF/pages/tiposProduto.jsp</result>
        </action>
        
        <action name="tipoProduto.novo">      
        	<interceptor-ref name="appStack" />        
            <result name="success" type="dispatcher" >/WEB-INF/pages/cadastrarTipoProduto.jsp</result>
        </action>
        
        <action name="tipoProduto.carregar" method="load" class="br.com.fastorder.action.TipoProdutoAction">      
        	<interceptor-ref name="appStack" />        
            <result name="success" type="dispatcher" >/WEB-INF/pages/tipoProduto.jsp</result>
            <result name="error" type="chain" >tipoProduto.listar</result>            
        </action>        
        
        <action name="tipoProduto.cadastrar" method="insert" class="br.com.fastorder.action.TipoProdutoAction">      
        	<interceptor-ref name="appStack" />        
            <result name="success" type="chain" >tipoProduto.listar</result>
            <result name="error" type="chain" >tipoProduto.listar</result>
            <result name="input" type="chain" >tipoProduto.listar</result>
        </action>
        
        <action name="tipoProduto.atualizar" method="update" class="br.com.fastorder.action.TipoProdutoAction">      
        	<interceptor-ref name="appStack" />        
            <result name="success" type="chain" >tipoProduto.listar</result>
            <result name="error" type="chain" >tipoProduto.listar</result>
            <result name="input" type="chain" >tipoProduto.listar</result>                        
        </action>
        
        <action name="tipoProduto.excluir" method="delete" class="br.com.fastorder.action.TipoProdutoAction">      
        	<interceptor-ref name="appStack" />        
            <result name="success" type="chain" >tipoProduto.listar</result>
            <result name="error" type="chain" >tipoProduto.listar</result>            
        </action>                              
        
	</package>

</xwork>
