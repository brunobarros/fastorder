<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/fastorder</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>		
				
		<!-- Condiguração do c3p0 -->

		<property name="hibernate.c3p0.max_size">10</property>
		<property name="hibernate.c3p0.min_size">3</property>
		<property name="hibernate.c3p0.timeout">180</property>		
		<property name="hibernate.c3p0.max_statements">10</property>
		<property name="hibernate.c3p0.idle_test_period">100</property>
		<property name="hibernate.c3p0.acquire_increment">2</property>			

		<!-- Configurações de debug -->

		<property name="show_sql">false</property>
        <property name="use_outer_join">false</property>	
        <property name="hibernate.generate_statistics">true</property>
        <property name="hibernate.use_sql_comments">false</property>	
        
        <!-- Mapeamentos -->
        
     	<mapping class="br.com.fastorder.model.Usuario" />
  		<mapping class="br.com.fastorder.model.TipoProduto" />     	  		
  		<mapping class="br.com.fastorder.model.Produto" />
  		<mapping class="br.com.fastorder.model.Mesa" />
		<mapping class="br.com.fastorder.model.Pedido" />  		  		
  		<mapping class="br.com.fastorder.model.Conta" />  		  	 	
 		<mapping class="br.com.fastorder.model.Administrador" />
 		<mapping class="br.com.fastorder.model.Garcom" />
 		<mapping class="br.com.fastorder.model.Caixa" /> 		

	</session-factory>
</hibernate-configuration>
